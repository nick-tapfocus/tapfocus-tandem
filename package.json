{
  "name": "tapfocus-tandem-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "typecheck": "tsc --noEmit || true",
    "dev:api": "tsx scripts/dev-server.ts",
    "dev:app": "dotenv -e .env.local -- npm run start --prefix app",
    "predev": "npm install --prefix app",
    "dev": "concurrently -n api,app -c blue,green \"npm run dev:api\" \"npm run dev:app\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "openai": "^4.57.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vercel/node": "^3.2.20",
    "@types/node": "^20.12.12",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "tsx": "^4.19.2",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.5.4"
  }
}

